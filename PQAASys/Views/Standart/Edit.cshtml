@model PQAASys.Standart

@{
    ViewData["Title"] = "Редактирование стандарта";
}
<h2>Редактирование стандарта</h2>
<div class="row">
    <div class="div-register">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Standart_id" />
            <div class="form-group">
                <label asp-for="StandartSeries" class="control-label">Серия</label>
                <input asp-for="StandartSeries" class="form-control" />
                <span asp-validation-for="StandartSeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandartNumber" class="control-label">Номер</label>
                <input asp-for="StandartNumber" class="form-control" />
                <span asp-validation-for="StandartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandartName" class="control-label">Название</label>
                <input asp-for="StandartName" class="form-control" />
                <span asp-validation-for="StandartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfIssue" class="control-label">Год</label>
                <input asp-for="YearOfIssue" class="form-control" />
                <span asp-validation-for="YearOfIssue" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к перечню стандартов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
