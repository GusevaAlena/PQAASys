@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<h2>Пожалуйста, заполните форму для прохождения регистрации</h2>

<hr />
<div class="row">
    <div class="div-register">
        <form asp-action="Register">           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.SurName" class="control-label">Фамилия</label>
                <input asp-for="User.SurName" class="form-control" />
                <span asp-validation-for="User.SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label">Имя</label>
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Patronymic" class="control-label">Отчество</label>
                <input asp-for="User.Patronymic" class="form-control" />
                <span asp-validation-for="User.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Position" class="control-label">Должность</label>
                <select asp-for="User.Position" class="form-control" asp-items="@Model.PositionSelectList">
                    <option selected disabled>--Выберите должность--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="User.Department" class="control-label">Отдел</label>
                <select asp-for="User.Department" class="form-control" asp-items="@Model.DepartmentSelectList">
                    <option selected disabled>--Выберите отдел--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="User.Login" class="control-label">Логин</label>
                <input asp-for="User.Login" class="form-control" />
                <span asp-validation-for="User.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PasswordHash" class="control-label">Пароль</label>
                <input asp-for="User.PasswordHash" class="form-control" />
                <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
