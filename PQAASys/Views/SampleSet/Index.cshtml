@model SampleSetViewModel

@{
    ViewData["Title"] = "Ввод информации об образцах";
}

<h2>Здравствуйте, @User.Identity.Name!</h2>
<h2>Для подачи заявки, необходимо выполнить следующие шаги.</h2>
<h2>Шаг 1. Заполните информацию об образцах, которые необходимо будет испытать, в форме ниже</h2>
<hr />
<div class="row">
    <div class="div-register">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sampleSet.numOfSamples" class="control-label">Количество образцов</label>
                <input asp-for="sampleSet.numOfSamples" class="form-control" />
                <span asp-validation-for="sampleSet.numOfSamples" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sampleSet.TypeOfProduct" class="control-label">Тип изделия</label>
                <input asp-for="sampleSet.TypeOfProduct" class="form-control" />
                <span asp-validation-for="sampleSet.TypeOfProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sampleSet.MaterialGrade" class="control-label">Марка материала</label>
                <input asp-for="sampleSet.MaterialGrade" class="form-control" />
                <span asp-validation-for="sampleSet.MaterialGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sampleSet.Marking" class="control-label">Маркировка образцов</label>
                <input asp-for="sampleSet.Marking" class="form-control" />
                <span asp-validation-for="sampleSet.Marking" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Далее" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
